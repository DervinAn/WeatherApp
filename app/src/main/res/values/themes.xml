    <!-- Splash screen theme -->
    <style name="Theme.Ktor.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <!-- Animated icon (optional) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item> <!-- 1 second -->
